%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{type: 'button', 'data-toggle': 'collapse', 'data-target': '#navbar', 'aria-expanded': 'false', 'aria-controls': 'navbar'}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'D&Dave', root_path, class: 'navbar-brand', id: 'logo'

    .navbar-collapse.collapse#navbar
      %ul.nav.navbar-nav.navbar-right
        %li{class: "#{'active' if (controller_name == 'home' && action_name == 'spells') || (controller_name == 'home' && action_name == 'spells_code')}"}= link_to 'Spell Book', root_path
        %li{class: "#{'active' if controller_name == 'home' && action_name == 'dice'}"}= link_to 'Dice', dice_path
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{href: '#', 'data-toggle': 'dropdown', role: 'button', 'aria-haspopup': 'true', 'aria-expanded': 'false'}
              = current_user.username
              %span.caret
            %ul.dropdown-menu.inverse-dropdown
              %li= link_to('Dashboard', dashboard_path)
              %li= link_to('Change Password', edit_user_registration_path)
              %li.divider{role: 'separator'}
              %li= link_to('Logout', destroy_user_session_path, :method => :delete)
        - else
          %li{class: "#{'active' if controller_name == 'sessions'}"}= link_to('Login', new_user_session_path)

      -#%nav
      -#%ul.nav.navbar-nav.navbar-right
