%h1 Change your password
.row
  .col-lg-6.col-lg-offset-3.col-sm-8.col-sm-offset-2.col-xs-12
    = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      = f.hidden_field :reset_password_token
      = f.password_field :password, autocomplete: 'off', label: 'New Password'
      = f.password_field :password_confirmation, autocomplete: 'off', label: 'Confirm New Password'
      %br
      = f.submit 'Change my password', {class: 'btn btn-success', 'data-loading-text': 'Saving...'}

    %br
    = render 'devise/shared/links'
