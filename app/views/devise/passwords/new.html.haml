%h2 Forgot your password?
.row
  .col-lg-6.col-lg-offset-3.col-sm-8.col-sm-offset-2.col-xs-12
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!

      %fieldset
        .control-group
          = f.label :username
          .control
            = f.text_field :username, autofocus: true

        .form-actions
          = f.submit 'Send me reset password instructions', {class: 'btn btn-success', 'data-loading-text': 'Sending...'}

    %br
    = render 'devise/shared/links'
