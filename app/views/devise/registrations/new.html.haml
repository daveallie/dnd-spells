%h1 Sign up
.row
  .col-lg-6.col-lg-offset-3.col-sm-8.col-sm-offset-2.col-xs-12
    = bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      = f.text_field :username, autofocus: true, help: 'Can only contain A-Z, a-z, 0-9, and ._- special characters'
      = f.email_field :email
      = f.password_field :password, autocomplete: 'off'
      = f.password_field :password_confirmation, autocomplete: 'off'
      %br
      = f.submit 'Sign Up', {class: 'btn btn-success', 'data-loading-text': 'Submitting...'}
    %br
    = render 'devise/shared/links'
